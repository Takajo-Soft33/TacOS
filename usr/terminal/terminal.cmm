#include <syslib.h>
#include <io.h>
#include <lib.h>

char[] c = array(2);
public int main(int argc, char[][] argv){
  out(0x2c,0x0006);
  conWrite("Console:TeC\n");
  c[1] = '\0';
  for(;;){
    int ch = getSIO();
    if(chr(ch) != '\0'){
      c[0] = chr(ch);
      conWrite(c);
    }else{
      int k = getKey();
      if(k == 0x1b){ // Escキー
        conWrite("\n");
        out(0x2c,0x0004);
        break;
      }
      if (k != 0x00){
        putSIO(k);
      }
    }
  }
  return 0;
}
